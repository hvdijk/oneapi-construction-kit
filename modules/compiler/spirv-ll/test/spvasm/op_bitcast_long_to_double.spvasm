; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a Vulkan -c Float64 -c Int64 %spv_file_s | FileCheck %s
            OpCapability Shader
            OpCapability Float64
            OpCapability Int64
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %src "src"
               OpName %dst "dst"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %long = OpTypeInt 64 1
    %ptr_long = OpTypePointer Function %long
          %9 = OpConstant %long -4200000000
        %double = OpTypeFloat 64
    %ptr_double = OpTypePointer Function %double
       %main = OpFunction %void None %3
          %5 = OpLabel
        %src = OpVariable %ptr_long Function
        %dst = OpVariable %ptr_double Function
               OpStore %src %9
         %13 = OpLoad %long %src
         %14 = OpBitcast %double %13
               OpStore %dst %14
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: = alloca i64
; CHECK: = alloca double
; CHECK: store i64 -4200000000, ptr {{[%@].*}}
; CHECK: = load i64, ptr {{[%@].*}}
; CHECK: = bitcast i64 {{[%@].*}} to double
; CHECK: store double {{[%@].*}}, ptr {{[%@].*}}
; CHECK: ret void

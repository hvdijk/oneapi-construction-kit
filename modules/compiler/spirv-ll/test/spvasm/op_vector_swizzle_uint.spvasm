; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a Vulkan -c Float64 -c Int64 %spv_file_s | FileCheck %s
            OpCapability Shader
            OpCapability Float64
            OpCapability Int64
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %main "main"
               OpName %res "res"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %uint = OpTypeInt 32 0
     %v3_uint = OpTypeVector %uint 3
 %ptr_v3_uint = OpTypePointer Function %v3_uint
         %10 = OpConstant %uint 42
         %11 = OpConstantComposite %v3_uint %10 %10 %10
      %undef = OpUndef %v3_uint
       %main = OpFunction %void None %3
          %5 = OpLabel
        %res = OpVariable %ptr_v3_uint Function
         %23 = OpVectorShuffle %v3_uint %11 %undef 0 0 1
               OpStore %res %23
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: = alloca <3 x i32>
; CHECK: store <3 x i32> {{<(i32 42(, )?)+>|splat \(i32 42\)}}, ptr {{[%@].*}}
; CHECK: ret void
